{
  "DESCRIPCION_GENERAL": {
    "nombre": "Sistema de Gestión de Inventarios Profesional",
    "version": "1.0.0",
    "tipo": "Frontend - JavaScript Vanilla",
    "descripcion": "Esquema de datos para la gestión profesional de inventarios sin backend"
  },

  "CATEGORIA": {
    "descripcion": "Define la estructura de categorías de productos",
    "ejemplo": {
      "id": "CAT-001",
      "nombre": "Electrónica",
      "descripcion": "Productos electrónicos en general",
      "icono": "electronics",
      "color": "#FF6B6B",
      "activa": true,
      "fechaCreacion": "2026-02-14T10:30:00Z",
      "modificadoEn": "2026-02-14T10:30:00Z"
    },
    "propiedades": {
      "id": {
        "tipo": "string",
        "formato": "CAT-XXX (auto-generado)",
        "requerido": true,
        "descripcion": "Identificador único de categoría"
      },
      "nombre": {
        "tipo": "string",
        "minimo": 3,
        "maximo": 50,
        "requerido": true,
        "descripcion": "Nombre único de la categoría"
      },
      "descripcion": {
        "tipo": "string",
        "maximo": 500,
        "requerido": false,
        "descripcion": "Descripción detallada de la categoría"
      },
      "icono": {
        "tipo": "string",
        "requerido": false,
        "descripcion": "Nombre del icono o emoji para la categoría"
      },
      "color": {
        "tipo": "string",
        "formato": "#RRGGBB",
        "requerido": false,
        "descripcion": "Color hexadecimal para identificación visual"
      },
      "activa": {
        "tipo": "boolean",
        "porDefecto": true,
        "descripcion": "Indica si la categoría está activa"
      },
      "fechaCreacion": {
        "tipo": "ISO8601",
        "autoGenerado": true,
        "descripcion": "Timestamp de creación"
      },
      "modificadoEn": {
        "tipo": "ISO8601",
        "autoGenerado": true,
        "descripcion": "Timestamp de última modificación"
      }
    }
  },

