      "descripcion": {
        "tipo": "string",
        "maximo": 1000,
        "requerido": false,
        "descripcion": "Descripción detallada del producto"
      },
      "categoriaId": {
        "tipo": "string",
        "formato": "CAT-XXX",
        "requerido": true,
        "descripcion": "Referencia a categoría (relación 1:N)"
      },
      "precio": {
        "tipo": "objeto",
        "requerido": true,
        "propiedades": {
          "precioCompra": {"tipo": "number", "minimo": 0, "descripcion": "Precio de costo"},
