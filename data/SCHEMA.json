      "DEVOLUCION_CLIENTE",
      "AJUSTE_INVENTARIO",
      "TRANSFERENCIA_ENTRADA",
      "RECEPCION_INICIAL"
    ],
    "razonesSalida": [
      "VENTA_CLIENTE",
      "DEVOLUCION_PROVEEDOR",
      "AJUSTE_INVENTARIO",
      "TRANSFERENCIA_SALIDA",
      "MERMA_DETERIORO",
      "MUESTRA_COMERCIAL"
    ],
    "propiedades": {
      "id": {
        "tipo": "string",
        "formato": "MOV-XXX (auto-generado)",
        "requerido": true,
        "descripcion": "Identificador único del movimiento"
      },
      "tipo": {
        "tipo": "enum",
        "valores": ["ENTRADA", "SALIDA"],
        "requerido": true,
        "descripcion": "Tipo de movimiento"
      },
      "productoId": {
        "tipo": "string",
        "formato": "PROD-XXX",
        "requerido": true,
        "descripcion": "Referencia al producto movido"
      },
      "cantidad": {
        "tipo": "integer",
        "minimo": 1,
        "requerido": true,
        "descripcion": "Cantidad movida (siempre positiva)"
      },
      "fechaMovimiento": {
        "tipo": "ISO8601",
        "requerido": true,
        "descripcion": "Fecha y hora del movimiento"
      },
      "razon": {
        "tipo": "enum",
        "valores": "Ver arrays razonesEntrada y razonesSalida",
