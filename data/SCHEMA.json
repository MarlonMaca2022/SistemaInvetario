      },
      "inventario": {
        "tipo": "objeto",
        "requerido": true,
        "propiedades": {
          "cantidad": {"tipo": "integer", "minimo": 0, "descripcion": "Stock actual"},
          "minimo": {"tipo": "integer", "minimo": 0, "descripcion": "Stock mínimo permitido"},
          "maximo": {"tipo": "integer", "minimo": 0, "descripcion": "Stock máximo permitido"},
          "ubicacion": {"tipo": "string", "descripcion": "Ubicación física en almacén"}
