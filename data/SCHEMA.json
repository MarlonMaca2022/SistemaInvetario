        "descripcion": "Motivo del movimiento"
      },
      "detalles": {
        "tipo": "objeto",
        "requerido": false,
        "descripcion": "Información adicional según tipo de movimiento"
      },
      "usuario": {
        "tipo": "string",
        "requerido": true,
        "descripcion": "Email del usuario que realizó el movimiento"
      },
      "notas": {
        "tipo": "string",
        "maximo": 500,
        "requerido": false,
        "descripcion": "Anotaciones adicionales"
      },
      "estado": {
        "tipo": "enum",
        "valores": ["PENDIENTE", "COMPLETADO", "CANCELADO"],
        "defecto": "COMPLETADO",
        "descripcion": "Estado del movimiento"
      },
      "geoLocalizacion": {
        "tipo": "objeto",
        "requerido": false,
        "propiedades": {
          "almacen": {"tipo": "string"},
          "ubicacion": {"tipo": "string"}
        }
      }
    }
  },

