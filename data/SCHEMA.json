          "modelo": {"tipo": "string"},
          "especificacionesTecnicas": {"tipo": "string"}
        }
      },
      "estado": {
        "tipo": "enum",
        "valores": ["ACTIVO", "INACTIVO", "DESCONTINUADO"],
        "defecto": "ACTIVO",
        "descripcion": "Estado del producto"
      },
      "imagen": {
        "tipo": "string",
        "requerido": false,
        "descripcion": "Nombre del archivo de imagen"
      },
      "fechaCreacion": {
        "tipo": "ISO8601",
        "autoGenerado": true
      },
      "modificadoEn": {
        "tipo": "ISO8601",
        "autoGenerado": true
      }
    }
  },

  "MOVIMIENTO": {
    "descripcion": "Define la estructura de movimientos de inventario (Entrada/Salida)",
    "ejemplo": {
      "id": "MOV-001",
      "tipo": "ENTRADA",
      "productoId": "PROD-001",
      "cantidad": 10,
      "fechaMovimiento": "2026-02-14T14:30:00Z",
      "razon": "COMPRA_PROVEEDOR",
      "detalles": {
        "proveedorOrdenId": "POR-0001",
        "numeroComprobante": "FAC-2026-001",
        "costo": 8000.00
      },
      "usuario": "juan.perez@empresa.com",
      "notas": "Compra a proveedor autorizado",
      "estado": "COMPLETADO",
      "geoLocalizacion": {
        "almacen": "Almacén Principal",
        "ubicacion": "Pasillo 3 - Estante A"
      }
    },
    "tipos": ["ENTRADA", "SALIDA"],
